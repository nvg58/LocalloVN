<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    android:orientation="vertical"
    tools:context="com.locol.locol.DetailsEventActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/eventThumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/jewels" />

        <RelativeLayout
            android:id="@+id/titleSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventThumbnail"
            android:layout_margin="@dimen/size_byte"
            android:background="@drawable/card"
            android:padding="@dimen/size_byte">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_half_byte"
                android:paddingTop="@dimen/size_half_byte"
                android:text="Run The Jewels"
                android:textColor="@color/colorFeedPrimary"
                android:textSize="@dimen/size_text_header"
                 />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/locationDateSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleSection"
            android:layout_margin="@dimen/size_byte"
            android:background="@drawable/card"
            android:padding="@dimen/size_byte">

            <TextView
                android:id="@+id/locationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_half_byte"
                android:paddingTop="@dimen/size_half_byte"
                android:text="LOCATION"
                android:textColor="@color/colorFeedPrimary"
                android:textSize="@dimen/size_text_secondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationTitle"
                android:paddingBottom="@dimen/size_half_byte"
                android:paddingTop="@dimen/size_half_byte"
                android:text="Iron City, Birmingham, AL"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/size_text_primary" />

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:id="@+id/btnDirection"
                android:layout_alignBottom="@id/eventPlace"
                android:layout_alignRight="@id/locationTitle"
                android:layout_alignTop="@id/eventPlace"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_directions_black_24dp"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/dateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventPlace"
                android:paddingBottom="@dimen/size_half_byte"
                android:paddingTop="@dimen/size_byte"
                android:text="DATE"
                android:textColor="@color/colorFeedPrimary"
                android:textSize="@dimen/size_text_secondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateTitle"
                android:paddingBottom="@dimen/size_half_byte"
                android:paddingTop="@dimen/size_half_byte"
                android:text="Sat Feb 28 2005 \n05:00 pm"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/size_text_primary" />

            <Button
                android:id="@+id/btnAddToCalendar"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/eventDate"
                android:layout_alignRight="@id/dateTitle"
                android:layout_alignTop="@id/eventDate"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="ADD TO CALENDAR"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rvspSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationDateSection"
            android:layout_margin="@dimen/size_byte"
            android:background="@drawable/card"
            android:padding="@dimen/size_byte">

            <TextView
                android:id="@+id/rvspTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_word"
                android:paddingRight="@dimen/size_word"
                android:paddingTop="@dimen/size_word"
                android:text="ARE YOU ATTENDING?"
                android:textColor="@color/colorFeedPrimary"
                android:textSize="@dimen/size_text_secondary"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnYes"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_margin="0dp"
                android:background="@color/colorAccent"
                android:elevation="8dp"
                android:text="YES"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnMaybe"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:background="@color/colorWindowBackground"
                android:text="MAY BE" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/detailSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvspSection"
            android:layout_margin="@dimen/size_byte"
            android:background="@drawable/card"
            android:padding="@dimen/size_byte">

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_half_byte"
                android:paddingTop="@dimen/size_half_byte"
                android:text="DETAILS"
                android:textColor="@color/colorFeedPrimary"
                android:textSize="@dimen/size_text_secondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailTitle"
                android:paddingBottom="@dimen/size_half_byte"
                android:paddingTop="@dimen/size_half_byte"
                android:text="It was a humorously perilous business for both of us. For, before we proceed further, it must be said that â€¦ monkey-rope was fast at both ends; fast to Queequeg's broad canvas belt, and fast to my narrow leather one. So that for better or for worse, we two, for the time, were wedded; and should poor Queequeg sink to rise no more, then both usage and honour demanded, that instead of cutting the cord, it should drag me down in his wake. So, then, an elongated Siamese ligature united us. Queequeg was my own inseparable twin brother; nor could I any way get rid of the dangerous liabilities which the hempen bond entailed."
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/size_text_primary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/organizerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailSection"
            android:layout_margin="@dimen/size_byte"
            android:background="@drawable/card"
            android:padding="@dimen/size_byte">

            <TextView
                android:id="@+id/organizerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/size_half_byte"
                android:paddingTop="@dimen/size_half_byte"
                android:text="ORGANIZER"
                android:textColor="@color/colorFeedPrimary"
                android:textSize="@dimen/size_text_secondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/organizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/organizerTitle"
                android:paddingBottom="@dimen/size_half_byte"
                android:paddingTop="@dimen/size_half_byte"
                android:text="Jewels Run Center, LA"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/size_text_primary" />

            <Button
                android:id="@+id/btnFollow"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignBottom="@id/organizer"
                android:layout_alignRight="@id/organizerTitle"
                android:background="@color/colorWindowBackground"
                android:text="FOLLOW US"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <include
            android:id="@+id/app_bar_transparent"
            layout="@layout/app_bar_transparent" />

    </RelativeLayout>
</ScrollView>
